{
  "scripts": {
    "start": "electron .",
    "dev": "nodemon -w ts --exec npx tsx task.mts --dev",
    "prod": "npx tsx task.mts --prod",
    "testprod": "npx tsx task.mts --testprod",
    "dev:f": "npx tsx task.mts --test",
    "push": "npx tsx task.mts --pushUpdateFile"
  },
  "name": "hyper-chat",
  "version": "0.1.1",
  "description": "*",
  "main": "js/main.js",
  "author": "Dadigua",
  "license": "MIT",
  "devDependencies": {
    "@electron/notarize": "^2.5.0",
    "@types/node": "^20.14.10",
    "electron": "30.5.1",
    "electron-builder": "24.13.3",
    "nodemon": "^3.1.4",
    "ts-loader": "^9.5.1",
    "typescript": "^5.5.2",
    "webpack": "^5.92.1",
    "webpack-cli": "^5.1.4",
    "webpack-node-externals": "^3.0.0"
  },
  "dependencies": {
    "@homebridge/ciao": "^1.3.1",
    "@koa/cors": "^5.0.0",
    "@modelcontextprotocol/sdk": "^1.0.3",
    "@types/adm-zip": "^0.5.5",
    "@types/fluent-ffmpeg": "^2.1.27",
    "adm-zip": "^0.5.14",
    "auto-launch": "^5.0.6",
    "bonjour": "^3.5.0",
    "bonjour-service": "^1.3.0",
    "cross-env": "^7.0.3",
    "cross-spawn": "^7.0.6",
    "crypto-js": "^4.2.0",
    "dayjs": "^1.11.13",
    "electron-log": "^5.2.0",
    "electron-screenshots": "^0.5.27",
    "electron-updater": "^6.3.9",
    "eventsource": "^3.0.2",
    "express": "^4.21.2",
    "fluent-ffmpeg": "^2.1.3",
    "image-js": "^0.35.6",
    "koa": "^2.15.3",
    "koa-body": "^6.0.1",
    "koa-router": "^13.0.1",
    "koa-static": "^5.0.0",
    "onnxruntime-node": "^1.20.1",
    "openai": "^4.55.7",
    "opusscript": "^0.1.1",
    "puppeteer-core": "^22.15.0",
    "react-markdown": "^9.0.1",
    "sherpa-onnx-node": "^1.10.22",
    "socket.io": "^4.7.5",
    "tsx": "^4.9.3",
    "uuid": "^9.0.1",
    "wav": "^1.0.2",
    "wav-encoder": "^1.3.0",
    "webdav": "^5.6.0",
    "zx": "^8.0.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BigSweetPotatoStudio/HyperChat.git"
  },
  "build": {
    "publish": [
      {
        "provider": "github"
      }
    ],
    "productName": "HyperChat",
    "copyright": "Copyright Â© 2019 ${author}",
    "asar": true,
    "appId": "men.dadigua.hpyerchat",
    "icon": "./web-build/assets/favicon.png",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "extendInfo": {
        "NSMicrophoneUsageDescription": "Please give us access to your microphone",
        "NSCameraUsageDescription": "Please give us access to your camera",
        "com.apple.security.device.audio-input": true,
        "com.apple.security.device.camera": true
      },
      "entitlements": "build/mac/entitlements.mac.plist",
      "entitlementsInherit": "build/mac/entitlements.mac.plist"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "HyperChat"
    },
    "files": [
      "!ts/**",
      "!*.mts",
      "!python/**",
      "!tmp/**",
      "!tests/**",
      "!web/**",
      "!lib/**",
      "!README.md",
      "!ldh.todo",
      "!depend",
      "!tsconfig.json",
      "!webpack.config.js"
    ],
    "extraResources": [],
    "extraFiles": []
  }
}